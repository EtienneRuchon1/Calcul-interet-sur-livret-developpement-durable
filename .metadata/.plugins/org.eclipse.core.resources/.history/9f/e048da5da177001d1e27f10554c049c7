package pn;

import java.util.ArrayList;
import java.util.List;

public class CompteEpargne {

	double solde;
	List<Double> interets = new ArrayList<Double>() ;
	double interetsCumules;

	public CompteEpargne() {
		super();
		// TODO Module de remplacement de constructeur auto-généré
	}

	public CompteEpargne(double solde, List<Double> interets, double interetsCumules) {
		super();
		this.solde = solde;
		this.interets = interets;
		this.interetsCumules = interetsCumules;
	}

	public double getSolde() {
		return solde;
	}

	public void setSolde(double solde) {
		this.solde = solde;
	}

	public List<Double> getInterets() {
		return interets;
	}

	public void setInterets(List<Double> interets) {
		this.interets = interets;
	}

	public double getInteretsCumules() {
		return interetsCumules;
	}

	public void setInteretsCumules(double interetsCumules) {
		this.interetsCumules = interetsCumules;
	}

	public String resumeCompteEpargne() {
		return "**** " + "le solde du compte épargne est ==> " + this.getSolde();
	}

}
